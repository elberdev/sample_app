<% provide(:title, @user.name) %>
<!-- classes 'row' and 'col-md-4' are from Bootstrap.
We also use the 'aside' tag to create a sidebar -->
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

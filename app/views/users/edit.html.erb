<% provide(:title, 'Edit user') %>
<!-- the provide method sets a variable that will be used by the yield method
in the rendered 'form' partial -->
<% provide(:button_text, 'Save changes') %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <!-- target="_blank" is used to open the link in another window or tab -->
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>

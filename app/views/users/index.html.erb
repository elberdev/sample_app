<% provide(:title, "All users") %>
<h1>All users</h1>

<!-- the pagination links are going to appear above and below our list -->
<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
